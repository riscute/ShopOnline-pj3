@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<ShopOnline.Models.Order>
@{
    ViewBag.Title = "Confirm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12">
    @*@{var view = ViewData["ViewPro"] as PagedList.IPagedList<ShopOnline.Models.ProductViewModel>;*@
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title ">Wait for Confirm</h4>

            <a class="btn btn-white  btn-sm" href="@Url.Action("Confirm","CateOrd")">Wait for Confirmation</a>

            <a class="btn btn-white  btn-sm" href="@Url.Action("Confirmed","CateOrd")">Confirmed</a>

            <a class="btn btn-white  btn-sm" href="@Url.Action("Delivering","CateOrd")">Delivering</a>
            <a class="btn btn-white  btn-sm" href="@Url.Action("Delivered","CateOrd")">Delivered</a>


        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class=" text-primary">
                    <th>
                        TranspotID
                    </th>
                    <th>
                        Customer
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Payment
                    </th>
                    <th>
                    </th>
                    </thead>
                    <tbody>



                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.OrderID
                                </td>
                                <td>
                                    @item.Customer.CusName
                                </td>
                                <td>
                                    @item.DateOrder
                                </td>
                                <td id="st">
                                    <span class="Status">
                                        @Html.DisplayFor(modelItem => item.Stt)
                                    </span>
                                </td>
                                <td>
                                    <span class="stt">
                                        @item.Bill.Status
                                    </span>
                                </td>

                                <td>
                                </td>
                                <td class="text-primary">
                                    @Html.ActionLink("Detail", "DetailOrd", new { id = item.BillID },new { @class="btn btn-info btn-sm"})


                                    @*@Html.ActionLink("Cancel", "Delete", new { id = item.OrderID, status = item.Bill.Status })*@
                                    <a class="btn btn-danger btn-sm"  onclick="Confirmed('@Url.Action("updateStatus", "CateOrd", new { id = item.OrderID})')">Confirmed</a>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row" >
        <div class="col-md-12 ">
            <div class="pagination font-alt">
                @Html.PagedListPager(Model, page => Url.Action("Confirm", new
                { page, currentFilter = ViewBag.CurrentFilter }))
            </div>
        </div>
    </div>

</div>
<style>
    .Status {
        background: #6adcb6;
        border-radius: 5px;
        padding: 3px;
        color: #fff;
        font-size: 13px;
    }

    .btnDetail {
        width: 80px;
        height: 25px;
        font-size: 10px;
        padding: initial !important;
    }


    .stt {
        background: #f5b876;
        border-radius: 5px;
        padding: 3px !important;
        color: #fff !important;
        font-size: 13px;
    }

    .btn-info .btn-sm {
        width: 80px;
        height: 25px;
        font-size: 10px;
        padding: initial !important;
    }

    .ZS1kj6 {
        width: 100%;
        margin-bottom: 12px;
        display: flex;
        overflow: hidden;
        position: -webkit-sticky;
        position: sticky;
        top: 0;
        z-index: 10;
        background: #fff;
    }

    ._2sowby {
        padding: 12px 35px;
        font-size: 16px;
        text-align: center;
        color: #b200ff;
        background: #fff;
    }

    .pagination {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
    }

        .pagination > li {
            width: 25px;
            height: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            border: 1px solid;
            border-radius: 10%;
            background-color: rebeccapurple;
        }
            .pagination > li > a:hover,
            .pagination > li > span:hover,
            .pagination > li > a:focus,
            .pagination > li > span:focus {
                background-color: #eeeeee;
                width:25px;
                color:#000;
            }

        .pagination > .active > a,
        .pagination > .active > span,
        .pagination > .active > a:hover,
        .pagination > .active > span:hover,
        .pagination > .active > a:focus,
        .pagination > .active > span:focus {
            z-index: 2;
            color: #000000;
            width: 25px;
            cursor: default;
            background: #d4e0fc;
        }

    .page {
        width: 350px;
    }

    .numberpage {
        width: 155px;
        height: 25px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        float: inherit;
    }
</style>
<script>
    function Confirmed(url) {
        $.ajax({
            type: 'POST',
            url: url,
            success: function (res) {
                window.location.reload(false);
            }
        });
    }
</script>



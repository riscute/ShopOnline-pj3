    <div class="container">
        <div class="screen">
            <div class="screen__content">
                <form class="login" id="registration">
                    <span id="pass"></span>
                    <h4>Admin Sign In</h4>
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        <div class="login__field">
                            <i class="login__icon fas fa-phone"></i>
                            <label>Phone</label>
                            @Html.TextBoxFor(m => m.Phone, "", new { @class = "login__input", @placeholder = "Phone" })
                        </div>


                        <div class="login__field">
                            <label>Password</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "login__input", @placeholder = "Password" })
                        </div>


                        <button class="button login__submit">
                            <span type="submit" name="submit" class="button__text" value="Login">Log in now</span>
                            <i class="button__icon fas fa-chevron-right"></i>
                        </button>


                        @*<div class="form-group">

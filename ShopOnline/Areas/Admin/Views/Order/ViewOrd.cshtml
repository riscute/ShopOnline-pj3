@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<ShopOnline.Models.Order>
@{
    ViewBag.Title = "ViewOrd";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Search", "Order", FormMethod.Get))
{
    <form class="navbar-form">
        <div class="input-group no-border" style="width: 300px;">
            <input type="text" value="@ViewBag.keyword" name="keyword" class="form-control" placeholder="Search ordId">
            <button type="submit" class="btn btn-default btn-round btn-just-icon">
                <i class="material-icons">search</i>
                <div class="ripple-container"></div>
            </button>
        </div>
    </form>
}
<div class="col-md-12">
    @*@{var view = ViewData["ViewOrd"] as PagedList.IPagedList<CDstore.Models.ModelView.OrderView>;*@
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title ">Order Table</h4>


        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class=" text-primary">
                    <th>
                        TranspotID
                    </th>
                    <th>
                        Customer
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Payment
                    </th>
                    <th>
                    </th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer.CusName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateOrder)
                                </td>
                                <td id="st">
                                    <span class="Status">
                                        @Html.DisplayFor(modelItem => item.Stt)
                                    </span>
                                </td>

                                <td>
                                    <span class="stt">
                                        @Html.DisplayFor(modelItem => item.Bill.Status)
                                    </span>
                                </td>
                                <td class="text-primary">
                                    @Html.ActionLink("Detail", "DetailOrd", new { id = item.BillID }, new { @class= "btn btn-info btn-sm"}) 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="pagination font-alt">
                @Html.PagedListPager(Model, page => Url.Action("ViewOrd", new
                { page, currentFilter = ViewBag.CurrentFilter }))
            </div>
        </div>
    </div>
</div>
<style>
    .Status {
        background: #6adcb6;
        border-radius: 5px;
        padding: 3px;
        color: #fff;
        font-size: 13px;
    }

    .btnDetail {
        width: 80px;
        height: 25px;
        font-size: 10px;
        padding: initial !important;
    }


    .stt {
        background: #f5b876;
        border-radius: 5px;
        padding: 3px !important;
        color: #fff !important;
        font-size: 13px;
    }

    .btn-info .btn-sm {
        width: 80px;
        height: 25px;
        font-size: 10px;
        padding: initial !important;
    }

    .pagination {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
    }

        .pagination > li {
            width: 25px;
            height: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            border: 1px solid;
            border-radius: 10%;
            background-color: rebeccapurple;
        }

    .page {
        width: 350px;
    }

    .numberpage {
        width: 155px;
        height: 25px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        float: inherit;
    }
</style>


